# Configuración de Email para formularios de contacto
CONTACT_EMAIL=contacto@bigloi.com

# Configuración para servicio de email (opcional - para envío automático)
# SMTP_HOST=smtp.hostinger.com
# SMTP_PORT=587
# SMTP_USER=contacto@bigloi.com
# SMTP_PASS=tu_password_de_email

# Para servicios como EmailJS (alternativa más fácil)
# EMAILJS_SERVICE_ID=your_service_id
# EMAILJS_TEMPLATE_ID=your_template_id
# EMAILJS_PUBLIC_KEY=your_public_key

# URL del sitio (para metadatos)
NEXT_PUBLIC_SITE_URL=https://bigloi.com

# Puerto para desarrollo local (bigloi-landing usa 3000)
PORT=3000

# Supabase Configuration (REQUIRED for intake API routes)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_STORAGE_BUCKET=intake

# IMPORTANT: Si no usas Supabase, comenta las rutas /api/intake/* en el código
# o considera una alternativa como AWS S3 / local filesystem